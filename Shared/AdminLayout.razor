 {
    public BehaviorSubject<AppUser> User = new BehaviorSubject<AppUser>(null);

    protected override async Task OnInitializedAsync()
    {
        var entity = await _user.GetUser();
        User.OnNext(entity);
        SetRole();
        await base.OnInitializedAsync();
    }

    public async void SetRole()
    {
        var role = await _userMananager.GetRolesAsync(User.Value);
        _context.HttpContext.Session.SetString("UserId", User.Value.Id);
        _context.HttpContext.Session.SetString("UserRole", role.First());
    }
